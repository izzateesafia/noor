rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles is list &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin']);
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Mushafs collection - readable by all, writable by admins only
    match /mushafs/{mushafId} {
      // Anyone can read mushafs (public access)
      allow read: if true;
      
      // Only admins can write (create, update, delete)
      allow create, update, delete: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data, or if they're admin
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      
      // Users can create their own document, admins can create any
      allow create: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      
      // Users can update their own data (except roles), admins can update any
      allow update: if isAuthenticated() && (
        (request.auth.uid == userId && !('roles' in request.resource.data.diff(resource.data).affectedKeys())) ||
        isAdmin()
      );
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Videos collection
    match /videos/{videoId} {
      // Authenticated users can read videos
      allow read: if isAuthenticated();
      
      // Only admins can write videos
      allow create, update, delete: if isAdmin();
    }
    
    // Classes collection
    match /classes/{classId} {
      // Authenticated users can read classes
      allow read: if isAuthenticated();
      
      // Only admins can write classes
      allow create, update, delete: if isAdmin();
    }
    
    // News collection
    match /news/{newsId} {
      // Anyone can read active news
      allow read: if true;
      
      // Only admins can write news
      allow create, update, delete: if isAdmin();
    }
    
    // Duas collection
    match /duas/{duaId} {
      // Allow anyone to read duas (make public); restrict writes to admins
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Hadiths collection
    match /hadiths/{hadithId} {
      // Allow public read; only admins can create/update/delete
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // App settings collection
    match /app_settings/{settingId} {
      // Anyone can read app settings
      allow read: if true;
      
      // Only admins can write app settings
      allow create, update, delete: if isAdmin();
    }
    
    // Ads collection
    match /ads/{adId} {
      // Anyone can read active ads (for display in app)
      allow read: if true;
      
      // Only admins can write ads
      allow create, update, delete: if isAdmin();
    }
    
    // Live streams collection
    match /live_streams/{liveStreamId} {
      // Authenticated users can read live streams
      allow read: if isAuthenticated();
      
      // Only admins can write live streams
      allow create, update, delete: if isAdmin();
    }
    
    // User tokens collection - for FCM push notifications
    match /user_tokens/{tokenId} {
      // Users can read/write their own token, admins can read/write any
      allow read: if isAuthenticated() && (request.auth.uid == tokenId || isAdmin());
      allow create, update: if isAuthenticated() && (request.auth.uid == tokenId || isAdmin());
      allow delete: if isAuthenticated() && (request.auth.uid == tokenId || isAdmin());
    }
    
    // Admin notifications collection - for admin notification management
    match /admin_notifications/{notificationId} {
      // Only admins can read, create, update, delete notifications
      allow read, create, update, delete: if isAdmin();
    }
    
    // Scheduled notifications collection - for scheduling live stream notifications
    match /scheduled_notifications/{notificationId} {
      // Only admins can read, create, update, delete scheduled notifications
      allow read, create, update, delete: if isAdmin();
    }
    
    // Default: Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

