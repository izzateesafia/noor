rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures: Users can read, write, and delete their own profile pictures
    // Files are stored as: profile_pictures/{userId}.{extension}
    match /profile_pictures/{fileName} {
      // Allow read if the user is authenticated
      allow read: if request.auth != null;
      
      // Allow write (create/update) only if:
      // 1. User is authenticated
      // 2. The filename starts with the authenticated user's UID followed by a dot
      // 3. File size is less than 5MB
      // 4. Content type is an image
      allow write: if request.auth != null 
                   && fileName.matches(request.auth.uid + '\\..*')
                   && request.resource.size < 5 * 1024 * 1024  // 5MB limit
                   && request.resource.contentType.matches('image/.*');
      
      // Allow delete only if the user owns the file
      allow delete: if request.auth != null 
                    && fileName.matches(request.auth.uid + '\\..*');
    }
    
    // Mushaf PDFs: Allow read for all authenticated users
    match /mushafs/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write for authenticated users
      // Note: For admin-only uploads, handle this in your app code or Cloud Functions
      allow write: if request.auth != null;
    }
    
    // Class thumbnails: Allow read for all authenticated users, write for authenticated users
    match /Image_class/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write for authenticated users
      // Note: For admin-only uploads, handle this in your app code or Cloud Functions
      // File size limit: 5MB
      // Content type: images only
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // 5MB limit
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Video thumbnails: Allow read for all authenticated users, write for authenticated users
    match /video_thumbnails/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write for authenticated users
      // File size limit: 5MB
      // Content type: images only
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // 5MB limit
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Video files: Allow read for all authenticated users, write for authenticated users
    match /videos/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write for authenticated users
      // File size limit: 500MB for video files
      // Content type: video files
      allow write: if request.auth != null
                   && request.resource.size < 500 * 1024 * 1024  // 500MB limit
                   && request.resource.contentType.matches('video/.*');
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
}
}

